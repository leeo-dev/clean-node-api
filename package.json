{
  "name": "clean-node-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest --watchAll --silent --colors --noStackTrace",
    "test:only": "jest --watch --onlyChanged --findRelatedTests  --noStackTrace",
    "test:staged": "jest --passWithNoTests --findRelatedTests --silent  --noStackTrace",
    "test:ci": "jest --coverage --noStackTrace --silent",
    "prepare": "husky install"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leeodesign/clean-node-api.git"
  },
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "npm run test:staged",
      "git add"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/leeodesign/clean-node-api/issues"
  },
  "homepage": "https://github.com/leeodesign/clean-node-api#readme",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "lint-staged": "^12.1.4",
    "standard": "^16.0.4"
  },
  "dependencies": {
    "express": "^4.17.2"
  }
}